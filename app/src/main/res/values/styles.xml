<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="inputTextLabelStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="framePhoneNumber">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="frameHeading">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="frameFooter">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="homePageLabel">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">Popins</item>
    </style>

    <style name="inputTextNumberLabelStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Home List Text Style-->
    <style name="dateAndTimeTextLabelStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textExploreTextLabelStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Inspector response Style-->
    <style name="inspectorResponseViewTextLabelStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="brownButtonStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@null</item>
    </style>

    <!-- Custom Dialog Style-->
    <style name="dialog_title_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Progress Dialog Style-->
    <style name="progressBarStyle" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorAccent">@color/teal_700</item>
    </style>

    <!-- Tab Layout Style-->
    <style name="tabIndicatorText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="landingPageTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="landingPageSubTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="landingPageContentStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="labelTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="inputTextStyle">
        <item name="backgroundColor">@color/white</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/edittext_border_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/edittext_border_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/edittext_border_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/edittext_border_radius</item>
        <item name="boxStrokeColor">@color/grey</item>
        <item name="boxStrokeWidth">@dimen/edittext_border_width</item>
        <item name="boxStrokeWidthFocused">@dimen/edittext_border_width</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundMode">none</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerSize">8dp</item> <!-- Adjust the corner radius as per your requirement -->
    </style>

    <style name="titleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="languageSelectedTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="languageUnSelectedTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item> <!-- Adjust the corner radius as needed -->
    </style>

    <style name="menuTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="moreLabelStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">11sp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="addressLabelStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#7D7D7D</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="addressContentStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="districtContentStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="notificationTitleTextLabelStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="notificationMessageTextLabelStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="headerButtonStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">11sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="WeatherImageViewStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="DayTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DescriptionTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TemperatureTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

</resources>